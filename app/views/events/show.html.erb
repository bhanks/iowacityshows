<div data-role="page" data-theme="b">
	<div data-role="header" data-theme="b">
		<h1>Event</h1>
	</div>

	<div data-role="content" data-theme="b">
		<table summary="event detail view">
			<tr>
				<th>Name</th>
				<td><%= @event.name%></td>
			</tr>
			<tr>
				<th>Venue</th>
				<td><%= @event.venue.name%></td>
			</tr>
			<tr>
				<th>Begins at</th>
				<td><%= @event.begins_at %></td>
			</tr>
			<tr>
				<th>Description</th>
				<td><%= raw @event.description %></td>
			</tr>
			<tr>
				<th>Price</th>
				<td><%= @event.price %></td>
			</tr>
			<tr>
				<th>Age Restriction</th>
				<td><%= @event.age_restriction %></td>
			</tr>
		</table>
	
	</div>

</div>

