<div class="events">
	<table class='events'>
		<% @events.each do |event| %>




				<% event_name = raw event.name%>
				<% 
					price_arr = event.price.split(",")
					if( price_arr.first.casecmp("free") == 0)
						price = event.price
					else
						price = price_arr.map{|a| a.insert(0,'$')}.join("/")
					end
				%>
					<tr>
						<td colspan=3 style="text-align:center"><%= link_to( event_name, event_path(event.id)) %><td>
					</tr>
					<tr>
						<td><%= event.begins_at.strftime("%A, %b #{event.begins_at.day.ordinalize}, %Y") %></td>
						<td><%= price %></td>

					<% unless event.begins_at.nil? %>
						<td><%= (event.begins_at.hour > 12)? "#{event.begins_at.hour % 12} PM": "#{event.begins_at.hour % 12} AM" %></td>
					<% end %>
						<td><%= event.age_restriction %></td>
					</tr>


		<% end %>
	</table>
</div>
	
<ul class="navigation">
	<li><%= link_to("This Week", week_events_path()) %></li>
	<li><%= link_to("Venue List", venues_path()) %></li>
</ul>
