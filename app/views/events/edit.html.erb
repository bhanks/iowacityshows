<%= link_to("<< Back to List", {:action  => 'index'}, :class  => 'back-link')%>

<div class="event new">
	<h2>Edit Event</h2>
	
	<%= form_for @event do |f| %>
		<table summary="event form fields">
			<tr>
				<th>Name</th>
				<td><%= f.text_field(:name)%></td>
			</tr>
			<tr>
				<th>Description</th>
				<td><%= f.text_field(:description)%></td>
			</tr>
			<tr>
				<th>Time</th>
				<td><%= f.text_field(:time)%></td>
			</tr>
			<tr>
				<th>Date (mm/dd/yyyy)</th>
				<td>
					<%= text_field_tag :month, @date[:month], :size => "2" %>/
					<%= text_field_tag :day, @date[:day], :size => "2" %>/
					<%= text_field_tag :year, @date[:year], :size => "4" %>
				</td>
			<tr>
			<tr>
				<th>Price</th>
				<td><%= f.text_field(:price)%></td>
			</tr>
			<tr>
				<th>Venue</th>
				<td><%= f.select(:venue_id, options_for_select(@venues_arr))%>
			</tr>
			
		</table>
		
		<div class="form-buttons">
			<%= submit_tag("Update event")%>
		</div>
		
	<% end %>
	
</div>