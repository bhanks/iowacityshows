<%= link_to("<< Back to List", {:action  => 'index'}, :class  => 'back-link')%>

<div class="event edit">
	<h2>Edit Event</h2>
	
	<%= form_for @event do |f| %>
		<table summary="event form fields">
			<tr>
				<th>Scraped Name</th>
				<td class="scraped_name"><%= @event.scraped_name %></td>
			</tr>
			<tr>
				<th>Name</th>
				<td><%= f.text_field(:name)%> </td>
			</tr>
				<th>Scraped Age Info</th>
				<td><%= @event.scraped_age %></td>
			</tr>
			<tr>
				<th>Age Restriction</th>
				<td>
					<%= f.radio_button(:age_restriction, "All Ages")%> <%= label :age_all, "All Ages"%>
					<%= f.radio_button(:age_restriction, "19+")%> <%= label :age_19, "19+"%>
					<%= f.radio_button(:age_restriction, "21+")%> <%= label :age_21, "21+"%>
				</td>
			</tr>
			<tr>
				<th>Description</th>
				<td><%= f.text_area(:description, :size=>"50x10")%></td>
			</tr>

			<tr>
				<th>Date/Time</th>
				<td>
					<%= f.datetime_select(:begins_at) %>
				</td>
			<tr>
			<tr>
				<th>Price</th>
				<td><%= f.text_field(:price)%></td>
			</tr>
			<tr>
				<th>Venue</th>
				<td><%= f.collection_select(:venue_id, Venue.all, :id, :display_name)%></td>
			</tr>
			<tr>
				<th>Confirmed</th>
				<td>	
						<%= f.radio_button(:confirmed, "0" ) %> <%= label :confirmed_no, "No"%>
						<%= f.radio_button(:confirmed, "1" ) %> <%= label :confirmed_yes, "Yes"%>
				</td>
		</table>
		

			<%= submit_tag("Update event")%>

		
	<% end %>
	
	
	<% unless @event.url.nil? %>
	<iframe src=<%= @event.url %> width=100% height=500px style="margin-top:50px">
	<% end %>
</div>